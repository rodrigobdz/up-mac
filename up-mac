#!/usr/bin/env bash
#
# Update dependencies mac via CLI.

set -o errexit
set -o pipefail
set -o nounset

fancy_echo() {
	echo
	echo "==> $1"
	echo
}

# Check if command exists in path and is executable,
# otherwise skip.
entrypoint() {
	local -r cmd="$1"

	# shellcheck disable=2086
	if [ -x "$(command -v $cmd)" ]; then
		fancy_echo "$cmd up"
		return
	fi

	fancy_echo "Skipping $cmd"

	# Avoid early exit of script when skipping
	set +o errexit
	return 1
	set -o errexit
}

brew_up() {
	entrypoint brew || exit

	brew update && brew upgrade && brew cleanup
	fancy_echo "brew cask up"
	brew cask upgrade --greedy
}

npm_up() {
	entrypoint npm || exit

	npm update -g
}

yarn_up() {
	entrypoint yarn || exit

	cd "$(yarn global dir)" &&
		yarn cache --force clean &&
		rm -rf node_modules/ &&
		yarn install &&
		yarn upgrade &&
		yarn autoclean --force
}

mas_up() {
	entrypoint mas || exit

	mas upgrade
}

fisher_up() {
	entrypoint fish || exit

	fish -c "fisher self-update"
}

gem_up() {
	entrypoint gem || exit

	gem update --user-install
}

rcup_up() {
	entrypoint rcup || exit

	rcup
}

# VSCode
# Coming soon...
# https://github.com/Microsoft/vscode/issues/16459

main() {
	brew_up
	npm_up
	yarn_up
	mas_up
	fisher_up
	gem_up
	rcup_up
}

main "$@"
